<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.activity.FormularioTrasacaoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/formulario_transacao_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formulario_transacao_titulo_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Titulo"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/formulario_transacao_categoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_titulo"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_titulo"
                app:layout_constraintEnd_toEndOf="@id/formulario_transacao_titulo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formulario_transacao_categoria_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/input_arrow_down"
                    android:hint="Categoria"
                    android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/formulario_transacao_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_categoria"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_categoria"
                app:layout_constraintEnd_toEndOf="@id/formulario_transacao_categoria"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formulario_Transacao_data_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data"
                    android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/formulario_transacao_valor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_data"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_data"
                app:layout_constraintEnd_toEndOf="@id/formulario_transacao_data"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formulario_transacao_valor_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="0123456789,"
                    android:inputType="numberDecimal"
                    android:hint="Valor (R$)"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
                android:id="@+id/formulario_transacao_label_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="selecione o saldo"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_valor"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_valor"
        />

        <RadioGroup
                android:id="@+id/formulario_transacao_seletor_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_label_saldo"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_label_saldo">

                <RadioButton
                        android:id="@+id/formulario_transacao_radio_superfluo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Supérfluo"/>

                <RadioButton
                        android:id="@+id/formulario_transacao_radio_importante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Importante"/>

        </RadioGroup>

        <TextView
                android:id="@+id/formulario_transacao_sem_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible"
                tools:text="*Superfluo indisponível"
                app:layout_constraintTop_toTopOf="@+id/formulario_transacao_seletor_saldo"
                app:layout_constraintBottom_toBottomOf="@+id/formulario_transacao_seletor_saldo"
                app:layout_constraintStart_toEndOf="@+id/formulario_transacao_seletor_saldo"
        />

        <Button
                android:id="@+id/formulario_transacao_botao"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Salvar"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintStart_toStartOf="@id/formulario_transacao_seletor_saldo"
                app:layout_constraintEnd_toEndOf="@id/formulario_transacao_valor"
                app:layout_constraintTop_toBottomOf="@id/formulario_transacao_seletor_saldo"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>