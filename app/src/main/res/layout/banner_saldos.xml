<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        app:layout_scrollFlags="scroll|enterAlways">


    <TextView
            android:id="@+id/banner_info_superfluo"
            android:text="supÃ©rfluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/banner_info_importante"
            android:text="importante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/banner_info_separador_primeiro"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/divisor"
            app:layout_constraintStart_toStartOf="@+id/banner_info_superfluo"
            app:layout_constraintEnd_toEndOf="@id/banner_info_importante"
            app:layout_constraintTop_toBottomOf="@id/banner_info_superfluo"/>

    <TextView
            android:id="@+id/banner_info_superfluo_valor_geral"
            tools:text="R$ 60,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintBottom_toTopOf="@+id/banner_info_separador_segundo"
            app:layout_constraintEnd_toStartOf="@+id/banner_info_geral"/>


    <TextView
            android:id="@+id/banner_info_importante_valor_geral"
            tools:text="R$ 180,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintBottom_toTopOf="@+id/banner_info_separador_segundo"
            app:layout_constraintStart_toEndOf="@+id/banner_info_geral"/>

    <TextView
            android:id="@+id/banner_info_geral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geral"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintEnd_toEndOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_primeiro"
            app:layout_constraintBottom_toTopOf="@+id/banner_info_separador_segundo"/>

    <View
            android:id="@+id/banner_info_separador_segundo"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/divisor"
            app:layout_constraintStart_toStartOf="@+id/banner_info_superfluo_valor_geral"
            app:layout_constraintEnd_toEndOf="@id/banner_info_importante_valor_geral"
            app:layout_constraintTop_toBottomOf="@id/banner_info_geral"/>

    <TextView
            android:id="@+id/banner_info_totais_periodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7 dias"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/banner_info_separador_segundo"
            app:layout_constraintEnd_toEndOf="@+id/banner_info_separador_segundo"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_segundo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/banner_info_superfluo_valor_periodo"
            tools:text="R$ 60,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/banner_info_separador_segundo"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_segundo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/banner_info_geral"/>


    <TextView
            android:id="@+id/banner_info_importante_valor_periodo"
            tools:text="R$ 180,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/banner_info_separador_segundo"
            app:layout_constraintTop_toBottomOf="@+id/banner_info_separador_segundo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/banner_info_geral"/>

</androidx.constraintlayout.widget.ConstraintLayout>