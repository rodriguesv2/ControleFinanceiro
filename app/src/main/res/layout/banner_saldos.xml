<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/banner"
        app:layout_scrollFlags="scroll|enterAlways">


    <TextView
            android:id="@+id/bannerInfoSuperfluo"
            android:text="@string/banner_superfluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/bannerInfoImportante"
            android:text="@string/banner_importante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/bannerInfoSeparadorPrimeiro"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/divisor"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoSuperfluo"
            app:layout_constraintEnd_toEndOf="@id/bannerInfoImportante"
            app:layout_constraintTop_toBottomOf="@id/bannerInfoSuperfluo"/>

    <TextView
            android:id="@+id/bannerInfoValorSuperfluoGeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintBottom_toTopOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintEnd_toStartOf="@+id/bannerInfoGeral"
            tools:text="R$ 60,00"/>


    <TextView
            android:id="@+id/banneInfoValorImportanteGeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintBottom_toTopOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintStart_toEndOf="@+id/bannerInfoGeral"
            tools:text="R$ 180,00"/>

    <TextView
            android:id="@+id/bannerInfoGeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/banner_geral"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintEnd_toEndOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorPrimeiro"
            app:layout_constraintBottom_toTopOf="@+id/bannerInfoSeparadorSegundo"/>

    <View
            android:id="@+id/bannerInfoSeparadorSegundo"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/divisor"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoValorSuperfluoGeral"
            app:layout_constraintEnd_toEndOf="@id/banneInfoValorImportanteGeral"
            app:layout_constraintTop_toBottomOf="@id/bannerInfoGeral"/>

    <TextView
            android:id="@+id/bannerInfoLabelTotaisPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="5dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintEnd_toEndOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="7 dias"/>

    <TextView
            android:id="@+id/bannerInfoValorSuperfluoPeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bannerInfoGeral"
            tools:text="R$ 60,00" />


    <TextView
            android:id="@+id/bannerInfoValorImportantePeriodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintTop_toBottomOf="@+id/bannerInfoSeparadorSegundo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bannerInfoGeral"
            tools:text="R$ 180,00" />

</androidx.constraintlayout.widget.ConstraintLayout>