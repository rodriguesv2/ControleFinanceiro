<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:layout_scrollFlags="scroll|enterAlways"
    >

    <View
        android:id="@+id/banner_container_info"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/banner_info_superfluo"
        android:text="supÃ©rfluo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@id/banner_container_info"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/banner_info_superfluo_valor"
        tools:text="R$ 60,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/banner_info_superfluo"
        app:layout_constraintTop_toBottomOf="@+id/banner_info_superfluo"
        />

    <TextView
        android:id="@+id/banner_info_importante"
        android:text="importante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/banner_container_info"/>

    <TextView
        android:id="@+id/banner_info_importante_valor"
        tools:text="R$ 180,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/banner_info_importante"
        app:layout_constraintTop_toBottomOf="@+id/banner_info_importante"
        />


</androidx.constraintlayout.widget.ConstraintLayout>