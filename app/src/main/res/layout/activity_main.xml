<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity"
        >

    <View
            android:id="@+id/main_container_info"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_lista"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/wallpaper_material_design"
            tools:listitem="@layout/item_transacao"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/main_container_info_supérfluo"
            android:text="Supérfluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#7c7979"
            app:layout_constraintStart_toStartOf="@id/main_container_info"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/main_container_info_supérfluo_valor"
            tools:text="R$ 60,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#7c7979"
            app:layout_constraintStart_toStartOf="@+id/main_container_info_supérfluo"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info_supérfluo"
            />

    <TextView
            android:id="@+id/main_container_info_importante"
            android:text="Importante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2f662c"
            app:layout_constraintEnd_toEndOf="@id/main_container_info"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:id="@+id/main_container_info_importante_valor"
            tools:text="R$ 180,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2f662c"
            app:layout_constraintEnd_toEndOf="@+id/main_container_info_importante"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info_importante"
    />

    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/main_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:menu_showShadow="true"
            app:menu_colorNormal="@color/fab_normal"
            app:menu_colorPressed="@color/fab_Pressed"
            app:menu_colorRipple="@color/fab_Ripple"
            app:menu_openDirection="up"
    >
        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/main_fab_receita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Receita"
                app:fab_size="mini"
                app:fab_colorNormal="@color/receita"
                app:fab_colorPressed="@color/fab_pressed_receita"
                app:fab_colorRipple="@color/fab_ripple_receita"
                android:src="@drawable/fab_arrow_up"
        />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/main_fab_despesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Despesa"
                app:fab_size="mini"
                app:fab_colorNormal="@color/despesa"
                app:fab_colorPressed="@color/fab_pressed_despesa"
                app:fab_colorRipple="@color/fab_ripple_despesa"
                android:src="@drawable/fab_arrow_down"
        />

    </com.github.clans.fab.FloatingActionMenu>

</androidx.constraintlayout.widget.ConstraintLayout>