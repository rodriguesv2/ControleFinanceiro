<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity"
        >

    <View
            android:id="@+id/main_container_info"
            android:layout_width="0dp"
            android:layout_height="140dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/main_lista"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#dddddd"
            tools:listitem="@layout/item_transacao"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/main_container_info_total"
            android:text="Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#444242"
            app:layout_constraintStart_toStartOf="@id/main_container_info"
            app:layout_constraintTop_toTopOf="@id/main_container_info"
            app:layout_constraintEnd_toEndOf="@id/main_container_info"
            />

    <TextView
            android:id="@+id/main_container_info_supérfluo"
            android:text="Supérfluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#7c7979"
            app:layout_constraintStart_toStartOf="@id/main_container_info"
            app:layout_constraintTop_toBottomOf="@id/main_container_info_total"
            />
    <TextView
            android:id="@+id/main_container_info_supérfluo_valor"
            tools:text="R$ 60,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#7c7979"
            app:layout_constraintStart_toStartOf="@+id/main_container_info_supérfluo"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info_supérfluo"
            />

    <TextView
            android:id="@+id/main_container_info_importante"
            android:text="Importante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2f662c"
            app:layout_constraintEnd_toEndOf="@id/main_container_info"
            app:layout_constraintTop_toBottomOf="@id/main_container_info_total"
            />
    <TextView
            android:id="@+id/main_container_info_importante_valor"
            tools:text="R$ 180,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2f662c"
            app:layout_constraintEnd_toEndOf="@+id/main_container_info_importante"
            app:layout_constraintTop_toBottomOf="@+id/main_container_info_importante"
    />
    <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/main_floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_margin="10dp"
            android:src="@drawable/fab_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </android.support.design.widget.FloatingActionButton>-->

    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/main_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:menu_showShadow="true"
            app:menu_colorNormal="@color/fab_normal"
            app:menu_colorPressed="@color/fab_Pressed"
            app:menu_colorRipple="@color/fab_Ripple"
            app:menu_openDirection="up"
    >
        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/main_fab_receita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Receita"
                app:fab_size="mini"
                app:fab_colorNormal="@color/fab_normal"
                app:fab_colorPressed="@color/fab_Pressed"
                app:fab_colorRipple="@color/fab_Ripple"
                android:src="@drawable/fab_arrow_up"
        />

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/main_fab_despesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Despesa"
                app:fab_size="mini"
                app:fab_colorNormal="@color/fab_normal"
                app:fab_colorPressed="@color/fab_Pressed"
                app:fab_colorRipple="@color/fab_Ripple"
                android:src="@drawable/fab_arrow_down"
        />

    </com.github.clans.fab.FloatingActionMenu>

</android.support.constraint.ConstraintLayout>