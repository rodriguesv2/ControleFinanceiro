<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.activity.FormularioDespesaActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <android.support.design.widget.TextInputLayout
                android:id="@+id/formulario_despesa_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/formulario_despesa_titulo_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:inputType="text"
                    android:hint="Titulo"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/formulario_despesa_categoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_titulo"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_titulo"
                app:layout_constraintEnd_toEndOf="@id/formulario_despesa_titulo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/formulario_despesa_categoria_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/input_arrow_down"
                    android:hint="Categoria"
                    android:focusable="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/formulario_despesa_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_categoria"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_categoria"
                app:layout_constraintEnd_toEndOf="@id/formulario_despesa_categoria"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/formulario_despesa_data_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data"
                    android:focusable="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/formulario_despesa_valor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_data"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_data"
                app:layout_constraintEnd_toEndOf="@id/formulario_despesa_data"
                app:layout_constraintVertical_bias="0"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/formulario_despesa_valor_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:hint="Valor"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
                android:id="@+id/formulario_despesa_label_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="selecione o saldo"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_valor"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_valor"
        />

        <RadioGroup
                android:id="@+id/formulario_despesa_seletor_saldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_label_saldo"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_label_saldo">

                <RadioButton
                        android:id="@+id/formulario_despesa_radio_superfluo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="SupÃ©rfluo"/>

                <RadioButton
                        android:id="@+id/formulario_despesa_radio_importante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Importante"/>

        </RadioGroup>

        <Button
                android:id="@+id/formulario_despesa_botao"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Salvar"
                android:backgroundTint="@color/button"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintStart_toStartOf="@id/formulario_despesa_seletor_saldo"
                app:layout_constraintEnd_toEndOf="@id/formulario_despesa_valor"
                app:layout_constraintTop_toBottomOf="@id/formulario_despesa_seletor_saldo"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>