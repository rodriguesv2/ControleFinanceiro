<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.FormularioReceitaActivity">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/formulario_receita_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo"

        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/formulario_receita_categoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_titulo"
            app:layout_constraintStart_toStartOf="@id/formulario_receita_titulo"
            app:layout_constraintEnd_toEndOf="@id/formulario_receita_titulo"
            app:layout_constraintVertical_bias="0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/formulario_receita_categoria_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/input_arrow_down"
                android:hint="Categoria"
                android:focusable="false"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/formulario_receita_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_categoria"
            app:layout_constraintStart_toStartOf="@id/formulario_receita_categoria"
            app:layout_constraintEnd_toEndOf="@id/formulario_receita_categoria"
            app:layout_constraintVertical_bias="0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/formulario_receita_data_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:focusable="false"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/formulario_receita_valor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/formulario_receita_data"
            app:layout_constraintStart_toStartOf="@id/formulario_receita_data"
            app:layout_constraintEnd_toEndOf="@id/formulario_receita_data"
            app:layout_constraintVertical_bias="0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >

        <android.support.design.widget.TextInputEditText
                android:id="@+id/formulario_receita_valor_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Valor"
        />
    </android.support.design.widget.TextInputLayout>




</android.support.constraint.ConstraintLayout>