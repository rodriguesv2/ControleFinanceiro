<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/item_transacao_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd"
>

    <android.support.v7.widget.CardView
            android:id="@+id/item_transacao_cardview"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            app:cardCornerRadius="10dp"
            app:layout_constraintWidth_percent=".65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:cardElevation="4dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/item_transacao_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Despesa"
            />

            <TextView
                    android:id="@+id/item_transacao_valor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    tools:text="R$ 50"
                    app:layout_constraintTop_toTopOf="@+id/item_transacao_tipo"
                    app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                    android:id="@+id/item_transacao_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@id/item_transacao_tipo"
                    app:layout_constraintTop_toBottomOf="@id/item_transacao_tipo"
                    tools:text="Hambuguer"
            />

            <TextView
                    android:id="@+id/item_transacao_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@id/item_transacao_titulo"
                    app:layout_constraintTop_toBottomOf="@id/item_transacao_titulo"
                    tools:text="Comida"
            />

            <TextView
                    android:id="@+id/item_transacao_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="20/09/1990"
                    app:layout_constraintTop_toTopOf="@id/item_transacao_categoria"
                    app:layout_constraintEnd_toEndOf="@id/item_transacao_valor"
            />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>